<h1>Hello, new User!</h1>

<p>Enter your details below to create a new account with us.</p>

<%= form_for :user, url: users_path do |f| %>

  <p><b>Account details</b></p>
  
  <p>
    <%= f.label :'E-mail address' %><br>
	<i><small>Note: This will be your username.</small></i><br>
	<%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :Password %><br>
    <%= f.text_field :password %>
  </p>

  <br>
  <p><b>Personal details</b></p>
  
  <p>
    <%= f.label :Name %><br>
	<%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :'Shipping address' %><br>
	<%= f.text_area :address %>
  </p>
  
  <p>
    <%= f.label :'Phone number' %><br>
	<%= f.text_field :phone_number %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>